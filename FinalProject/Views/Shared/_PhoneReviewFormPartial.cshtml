@model ReviewCreateVM
<form asp-action="review" method="post" class="review-post">
    <div class="rating-product d-flex-center mb--40">
        <p class="d-block">Your Rating</p>
        <span class="rating-widget-block">
            <input type="radio" asp-for="Rate" value="5" id="star1">
            <label for="star1"></label>
            <input type="radio" asp-for="Rate" value="4" id="star2">
            <label for="star2"></label>
            <input type="radio" asp-for="Rate" value="3" id="star3">
            <label for="star3"></label>
            <input type="radio" asp-for="Rate" value="2" id="star4">
            <label for="star4"></label>
            <input type="radio" asp-for="Rate" value="1" id="star5">
            <label for="star5"></label>
            <span class="text-danger" asp-validation-for="Rate"></span>
        </span>
    </div>
    <div class="row">
        <div class="input-top col-lg-12 col-md-12 col-12">
            <div class="form-group">
                <label for="message">Comment</label>
                <textarea asp-for="Text" id="message" cols="30" rows="10" class="form-control"></textarea>
            </div>
            <span class="text-danger" asp-validation-for="Text"></span>
        </div>
        <input type="hidden" name="PhoneId" value="@Model.PhoneId" />
        <div class="col-lg-12">
            <div class="form-submit">
                <button type="submit" class="btn btn-primary">Post Comment</button>

            </div>
        </div>
    </div>
</form>