@model MemberRegisterVM
<div class="breadcrumb-area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-8">
                <div>
                    <span class="px-2">
                        <a class="breadcrub-home" asp-controller="home" asp-action="index">Home</a><span class="breadcrub-title"> | </span><span class="breadcrub-blue">
                            Register
                        </span>
                    </span>
                    <h1 class="breadcrumb-title">Register</h1>
                </div>
            </div>
            <div class="col-lg-6 col-md-4">
                <div class="bradcrumb-image">
                    <img width="20%" src="~/assets/images/product-45.png" alt="Image">
                </div>
            </div>
        </div>
    </div>
</div>

<main class="container">
    <div class="col-md-6 offset-xl-2">
        <div class="axil-signin-form-wrap">
            <div class="axil-signin-form">
                <h3 class="title p-3">I'm New Here</h3>
                <p class="p-3">Enter your detail below</p>
                <form asp-action="register" method="post" class="singin-form">
                    <div class="p-2">
                            <label asp-for="UserName">Username</label>
                            <span class="text-danger" asp-validation-for="UserName"></span>
                            <input class="form-control" asp-for="UserName" placeholder="Username">
                    </div>
                    <div class="p-2">
                        <label asp-for="FullName">Fullname</label>
                        <span class="text-danger" asp-validation-for="FullName"></span>
                        <input class="form-control" asp-for="FullName" placeholder="Fullname">
                    </div>
                    <div class="p-2">
                        <label asp-for="ImageFile">Profile Image</label>
                        <span class="text-danger" asp-validation-for="ImageFile"></span>
                        <input class="form-control" asp-for="ImageFile" placeholder="Image">
                    </div>
                    <div class="p-2">
                        <label asp-for="Email">Email</label>
                        <span class="text-danger" asp-validation-for="Email"></span>
                        <input class="form-control" asp-for="Email" type="email" placeholder="Email">
                    </div>
                    <div class="p-2">
                        <label asp-for="Password">Password</label>
                        <span class="text-danger" asp-validation-for="Password"></span>
                        <input class="form-control" asp-for="Password" placeholder="Enter your password">
                    </div>
                    <div class="p-2">
                        <label asp-for="ConfirmPassword">ConfirmPassword</label>
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        <input class="form-control" asp-for="ConfirmPassword" placeholder="Return enter your password">
                    </div>
                    
                    <div class="p-2">
                        <button type="submit" class="btn btn-primary">Create Account</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

