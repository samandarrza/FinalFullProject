@model Blog
<div class="container p-2">
    <h2>Edit</h2>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-9">
                <form asp-action="edit" method="post" enctype="multipart/form-data">
                    <div class="form-group p-1 mx-1">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group p-1 mx-1">
                        <label asp-for="Tag">Tag</label>
                        <input asp-for="Tag" class="form-control">
                        <span class="text-danger" asp-validation-for="Tag"></span>
                    </div>
                    <div class="form-group mx-1 p-1">
                        <label asp-for="ImageFile">Image</label>
                        <input asp-for="ImageFile" class="form-control">
                        <img width="100px" style="border-radius: 10px" src="~/uploads/blog/@Model?.Image" />
                        <span class="text-danger" asp-validation-for="ImageFile"></span>
                    </div>
                    <div class="form-group p-1 mx-1">
                        <label asp-for="Description">Description</label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>

                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary m-2">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>