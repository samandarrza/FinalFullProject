@model Team
<div class="container p-2">
    <h2>Create</h2>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-9">
                <form asp-action="create" method="post" enctype="multipart/form-data">
                    <div class="form-group p-1 mx-1">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group p-1 mx-1">
                        <label asp-for="Position">Position</label>
                        <input asp-for="Position" class="form-control">
                        <span class="text-danger" asp-validation-for="Position"></span>
                    </div>
                    <div class="form-group mx-1 p-1">
                        <label asp-for="ImageFile">Image</label>
                        <input asp-for="ImageFile" class="form-control">
                        <span class="text-danger" asp-validation-for="ImageFile"></span>
                    </div>

                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary m-2">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>